<div id="signup-form">
  <div id="signup-close">✖︎</div>
  <%= form_with(model: User.new, local: true) do |f| %>
    <%= f.label :name, "名前" %>
    <%= f.text_field :name %>
    
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email %>
    
    <%= f.label :password, "パスワード" %>
    <%= f.password_field :password %>
    
    <%= f.label :password_confirmation, "確認用パスワード" %>
    <%= f.password_field :password_confirmation %>
    
    <%= f.submit "登録" %>
  <% end %>
</div>