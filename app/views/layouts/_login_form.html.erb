<div id="login-form">
  <div class="login-modal">
    <div class="login-close-div"><span id="login-close">✖</span></div>
    <h2>ログイン</h2>
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
      
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email %>
      
      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password %>
      
      <div><button type="submit" id="login-btn">ログイン</button></div>
    <% end %>
  </div>
</div>